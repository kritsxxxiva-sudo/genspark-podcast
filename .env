# Podcast AI Agents Application Environment Variables
# Copy this file to .env and fill in your API keys

# OpenAI API Key (Required)
OPENAI_API_KEY=demo_key_for_testing

# ElevenLabs API Key (Optional - for premium voice synthesis)
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here

# Application Settings
APP_NAME="Podcast AI Agents"
APP_VERSION="1.0.0"
DEBUG=true
LOG_LEVEL=DEBUG

# Server Configuration
HOST=0.0.0.0
PORT=8000
RELOAD=false

# Audio Settings
DEFAULT_VOICE_TYPE=professional
DEFAULT_TTS_SERVICE=openai
MAX_AUDIO_DURATION=30  # minutes
AUDIO_FORMAT=mp3
AUDIO_QUALITY=high

# Content Settings
DEFAULT_RESEARCH_DEPTH=comprehensive
DEFAULT_TONE=professional
MAX_CONTENT_LENGTH=50000  # characters
CONTENT_LANGUAGE=en

# File Storage
EPISODES_DIR=episodes
MAX_FILE_SIZE=100MB
CLEANUP_OLD_FILES=true
OLD_FILE_AGE_DAYS=30

# Rate Limiting
MAX_REQUESTS_PER_MINUTE=10
MAX_CONCURRENT_GENERATIONS=3

# Security
ALLOWED_ORIGINS=*
API_KEY_REQUIRED=false
CORS_ENABLED=true